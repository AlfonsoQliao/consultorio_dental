<div class="contenedor-formulario" align="center">
  <div class="wrap col-md-12">
    <!--Ruby adapted form--------------------------------->
    <%= form_for(:dentist,
                 :url => url_for(:controller => 'dentists', :action => 'ModificarDentista'),
                 :html => {class:"formulario"}) do |f|%>
        <div class="input-group">
          <%= f.text_field(:name) %>
          <%= f.label(:name, "Nombre")%>
        </div>
        <div class="input-group">
          <%= f.text_field(:surname) %>
          <%= f.label(:surname, "Apellido")%>
        </div>
        <div class="input-group">
          <%= f.text_field(:specialty) %>
          <%= f.label(:specialty, "Especialidad")%>
        </div>
        <div class="input-group">
          <%= f.text_field(:phone) %>
          <%= f.label(:phone, "Teléfono")%>
        </div>
        <div class="input-group">
          <%= f.text_field(:address)%>
          <%= f.label(:address, "Dirección") %>
        </div>
        <div class="input-group">
          <%= f.text_field(:mail)%>
          <%= f.label(:mail, "Correo") %>
        </div>
        <div class="input-group">
          <%= f.text_field(:rfc)%>
          <%= f.label(:rfc, "RFC") %>
        </div>
        <%= submit_tag("Modificar",:html=> {id: "btn-agregar"}) %>
    <% end %>
  </div>
