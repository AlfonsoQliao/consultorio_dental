<div class="container-fluid" style="background: #2196F3; box-shadow: 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.28);">
  <div class="row">
    <!--Formulario Agregar--------------------------------------------------->
    <div class="dropdown">
      <button class="btn btn-primary col-md-1 dropdown-toggle" data-toggle="dropdown" type="submit" style="margin-right: 10px; margin-top: 10px; margin-bottom: 10px;">Agregar</button>
      <div class="dropdown-menu" style="margin-top: 45px;">
        <div class="contenedor-formulario">
          <div class="wrap">
            <!--Ruby adapted form--------------------------------->
            <%= form_for(:supplier,
                         :url => url_for(:controller => 'suppliers', :action => 'CrearProveedor'),
                         :html => {class:"formulario"}) do |f|%>
                <div class="input-group">
                  <%= f.text_field(:name) %>
                  <%= f.label(:name, "Nombre")%>
                </div>
                <div class="input-group">
                  <%= f.text_field(:address) %>
                  <%= f.label(:address, "Dirección")%>
                </div>
                <div class="input-group">
                  <%= f.text_field(:phone) %>
                  <%= f.label(:phone, "Teléfono")%>
                </div>
                <div class="input-group">
                  <%= f.text_field(:rfc) %>
                  <%= f.label(:rfc, "RFC")%>
                </div>
                  <%= submit_tag("Agregar",:html=> {id: "btn-agregar"}) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!----------------------------------------------------------------------->

    <%= form_tag(suppliers_Buscar_path, :method => "get", id: "search-form", class: 'col-md-2 pull-right', :id => "buscar") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
    <% end %>

  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered" style="margin-top: 10px;">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Teléfono</th>
      <th>RFC</th>
    </tr>
    <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= link_to(supplier.id,{:action => 'DatosProveedores', :id =>supplier.id }) %></td>
          <td><%= supplier.name %></td>
          <td><%= supplier.address %></td>
          <td><%= supplier.phone %></td>
          <td><%= supplier.rfc %></td>
        </tr>
    <% end %>
  </table>
</div>